<p id="notice"><%= notice %></p>


<div class="products">
  <h2 class="sec_title">MENS-CLOTHES</h2>
    <div class="search_bar">
      <p>
        <%= form_tag(men_clothes_path,method: :get) do %>
        <%= text_field_tag :term %>
        <%= submit_tag 'search',{:class=>'btn btn-success show_article' }  %>
        <% end %>
      </p>
    </div>
  <div class="main_content">
    <div class="container">
      <% if @men_clothes.length == 0 %>
          <h4 align="center">No result found</h4>
        <% else %>
        <% @men_clothes.each_slice(3) do |group| %>
          <div class="row specing">
            <% group.each do |men_clothe|%>
              <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 card">
                <figure class="figure-img">
                  <div class="food_items_image">
                    <div class="img">
                      <%= link_to(image_tag(men_clothe.image_url), men_clothe_path(men_clothe)) %>
                    </div>
                    <h3 class="food_item_name"><%= men_clothe.name%></h3>
                      <p class="price_symbol">
                        <!-- <i class="fa fa-inr">
                        </i> -->
                        <%= men_clothe.price %>
                      </p>
                  </div>
                </figure>
              </div>
            <% end %>
          </div>
        <% end %>  
      <% end %>
    </div>
  </div>
</div>